<div class="truncate ...">
  <hr class="h-0.5 bg-gray-300">
  <p>By <%= comment.user.email if comment.user %> </p>
  <%= star_rating(comment.rating) %>
  <div class="flex flex-row space-x-4 ">
    <% comment.images.each do |image| %>
      <%= image_tag image.url, class: 'w-1/5 mx-1' %>
    <% end %>
  </div>
  <p><%= comment.content %></p>
  <%= comment.created_at.in_time_zone('Taipei').strftime("%Y-%m-%d %H:%M:%S") if comment.created_at %>
  <% if current_user.id == comment.user_id%>
    <%= button_to "刪除評論", comment, method: :delete %>
  <% end %>
</div>
